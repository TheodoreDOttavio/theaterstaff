<% provide(:title, "Sign in") %>
<div align="center">
<div class="well well-sm" style="width: 50%;">

<%= form_for(:session, url: sessions_path) do |f| %>
<h3>
<div class="row">
  <div class="col-md-5">Email</div>
  <div class="col-md-7"><%= f.text_field :email, value: params[:email] %></div>
</div>
<div class="row">
  <div class="col-md-5">Password</div>
  <div class="col-md-7"><%= f.password_field :password %></div>
</div>
</h3>
<div class="row">
  <div class="col-md-12"><h1><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></h1></div>
</div>
<% if params[:email].nil? then %>
<div class="row">
  <div class="col-md-12"><h1><%= link_to "Sign up!", signup_path %></h1></div>
</div>
<% end %>
<% end %>

</div>
</div>