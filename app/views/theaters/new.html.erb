<% provide(:title, 'Add a Theater') %>
<h1>Add a Theater or Venue</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@theater) do |f| %>

      <%= render 'shared/theater_error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.select :company, @companies %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.label :city %>
      <%= f.text_field :city %>

      <%= f.label :state %>
      <%= f.text_field :state %>

      <%= f.label :zip %>
      <%= f.text_field :zip %>

      <%= f.label :phone %>
      <%= f.telephone_field :phone %>

      <%= f.label :commentsentrance, "Enter the theater/venue:" %>
      <%= f.text_field :commentsentrance %>

      <%= f.label :commentsworklocation, "The console location:" %>
      <%= f.text_field :commentsworklocation %>

      <%= f.label :commentslock, "The console combination lock code is:" %>
      <%= f.text_field :commentslock %>


      <%= f.label :comments, "Additional information, trivia, history, or any other comments" %>
      <%= f.text_area :comments %>

      <%= f.submit "Add theater", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>