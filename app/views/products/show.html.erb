<% provide(:title, @product.name) %>

<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @product.name %></h1>
      </p>
        <%= @product.comments %>
      </p>

      <%= link_to "All Products", products_path, class: "btn btn-medium btn-primary" %>

      <% if current_user.admin?  %>
        <%= link_to "Edit", edit_product_path(@product), class: "btn btn-medium btn-primary" %>
      <% end %>
    </section>
  </aside>
</div>
