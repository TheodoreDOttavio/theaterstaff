<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

<%= render 'shared/error_messages' %>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :phone %>
      <%= f.text_field :phone %>

      <%= f.label :phonetype %>
      <%= f.select :phonetype, carrier_collection %>

      <%= f.check_box :txtupdate %>
      Receive weekly schedule by text messageing<br>

      <%= f.check_box :alert %>
      Receive a text message alert for each show

      <%= f.number_field :alerttime %>
      hours before your shift begins<br><br>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation %>

      <% if current_user.admin then %>
        <%= f.check_box :admin %> Select this to give <%= @user.name %> administrator access<br>
        <%= f.hidden_field :adminoverride, value:69 %>
      <% end %>

      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>