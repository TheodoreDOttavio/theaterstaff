<% provide(:title, @user.name) %>

<div align="center">
<div class="well well-sm" style="width: 50%;">
  <h1><%= @user.name %></h1>
  <h2>
  <% if @user.alert? %>
    <%= @user.name %> receives text alerts <%= @user.alerttime %> hours before each shift.
  <% end %>
  </h2>

  <div class="row">
    <div class="col-md-8 editlight lt">
    <% if @user.txtupdate? %>
      Currently receives schedule by text messageing
    <% else %>
      Does not receive schedule by text messageing
    <% end %>
    </div>
    <div class="col-md-4 editbold"><%= link_to "txt schedule", txtalert_user_path(@user), class: "btn btn-sm btn-primary" %></div>
  </div>
  <div class="row">
    <div class="col-md-8">&nbsp;</div>
    <div class="col-md-4 editbold"><%= link_to "email schedule", emailalert_user_path(@user), class: "btn btn-sm btn-primary" %></div>
  </div>


  <%= render partial: "distributeds/scheduled", collection: @scheduleds %>
  <%= @scheduleds.count %>
</div>
</div>